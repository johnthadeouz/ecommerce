<body>
    <%- include('../includes/navigation.ejs') %>
<main>
    <%if(products.length > 0){%>
        <ul>
        <%for(product of products){%>   
        <li><a href="/products/<%=product.productData.id%>"><%=product.productData.title%></a> | amount:<%=product.amount%></li>    
        <%}%>
        </ul>
        <p>TOTAL:<%=cartTotal%></p>
    <%}else{%>
        <h1>Empty Cart!</h1>
    <%}%>
</main>
    
