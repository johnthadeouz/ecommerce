<%- include('../includes/head.ejs') %>

</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(prods.length > 0){ %>
        <div class="grid">
            <% for(let product of prods){ %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title" id="title"><%=product.title%></h1>
                </header>
                <div class="card__image">
                    <img style="max-width:100px" src="https://images-na.ssl-images-amazon.com/images/I/A1w5NbcX4yL.jpg" alt="imagebook">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$20.00</h2>
                    <p class="product__description">A very interesting book about so many even more blablabla</p>
                </div>
                <div class="card__actions">
                    <button class="btn">Add</button>
                </div>
            </article>
            <% } %>
        </div>
    <% }else{ %>
        <h1>Products not found!</h1>
    <% } %>
    </main>

    
<%- include('../includes/end.ejs') %>